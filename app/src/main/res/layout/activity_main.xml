<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/srl_message">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gl_tip"
            android:drawableTop="@drawable/ic_message"
            android:paddingTop="32dp"
            android:drawableTint="?colorPrimary"
            android:gravity="center"
            android:text="Cargando mensaje"
            style="@style/TextAppearance.MaterialComponents.Headline6"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_tip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.8"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_instrucciones"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_tip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="(Modifica el mensaje desde la base de datos, arrastra y suelta para actualizar)"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>